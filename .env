# =============================================================================
# MICROSERVICES ENVIRONMENT CONFIGURATION - CENTRALIZED
# =============================================================================

# =============================================================================
# GLOBAL SHARED CREDENTIALS
# =============================================================================
# These are used across multiple services to reduce duplication
SHARED_PASSWORD=123456
SHARED_ADMIN_PASSWORD=123456
SHARED_ROOT_PASSWORD=123456
SHARED_DB_PASSWORD=123456

# Global Admin Configuration
ADMIN_USER=admin
ADMIN_PASSWORD=${SHARED_ADMIN_PASSWORD}
ADMIN_PASSWORD_2=12345678
ADMIN_EMAIL=admin@devarch.com

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
DOMAIN_SUFFIX=test
BASE_IP=127.0.0.1

# Service Domains - Using centralized suffix
NGINX_DOMAIN=nginx.${DOMAIN_SUFFIX}
GRAFANA_DOMAIN=grafana.${DOMAIN_SUFFIX}
PROMETHEUS_DOMAIN=prometheus.${DOMAIN_SUFFIX}
MATOMO_DOMAIN=matomo.${DOMAIN_SUFFIX}
ADMINER_DOMAIN=adminer.${DOMAIN_SUFFIX}
PHPMYADMIN_DOMAIN=phpmyadmin.${DOMAIN_SUFFIX}
MONGODB_DOMAIN=mongodb.${DOMAIN_SUFFIX}
METABASE_DOMAIN=metabase.${DOMAIN_SUFFIX}
NOCODB_DOMAIN=nocodb.${DOMAIN_SUFFIX}
PGADMIN_DOMAIN=pgadmin.${DOMAIN_SUFFIX}
REDIS_DOMAIN=redis.${DOMAIN_SUFFIX}

# =============================================================================
# DATABASE SERVICES - CENTRALIZED CONFIGURATION
# =============================================================================

# --- MariaDB Configuration ---
MARIADB_HOST=mariadb
MARIADB_PORT=3306
MARIADB_ROOT_PASSWORD=${SHARED_ROOT_PASSWORD}
MARIADB_DATABASE=mariadb
MARIADB_USER=mariadb_user
MARIADB_PASSWORD=${SHARED_DB_PASSWORD}

# --- MySQL Configuration ---
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=${SHARED_ROOT_PASSWORD}
MYSQL_DATABASE=mysql
MYSQL_USER=mysql_user
MYSQL_PASSWORD=${SHARED_DB_PASSWORD}

# --- PostgreSQL Configuration ---
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${SHARED_DB_PASSWORD}
POSTGRES_DB=postgres

# --- MongoDB Configuration ---
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=${SHARED_ROOT_PASSWORD}
MONGO_INITDB_DATABASE=admin

# --- Redis Configuration ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${SHARED_PASSWORD}

# =============================================================================
# DATABASE MANAGEMENT TOOLS
# =============================================================================

# --- Adminer ---
ADMINER_DEFAULT_SERVER=${MARIADB_HOST}

# --- phpMyAdmin ---
PMA_HOST=${MARIADB_HOST}
PMA_USER=${MARIADB_USER}
PMA_PASSWORD=${MARIADB_PASSWORD}

# --- Mongo Express ---
ME_CONFIG_MONGODB_SERVER=${MONGO_HOST}
ME_CONFIG_MONGODB_PORT=${MONGO_PORT}
ME_CONFIG_MONGODB_ENABLE_ADMIN=true
ME_CONFIG_MONGODB_AUTH_DATABASE=admin
ME_CONFIG_MONGODB_AUTH_USERNAME=${MONGO_INITDB_ROOT_USERNAME}
ME_CONFIG_MONGODB_AUTH_PASSWORD=${MONGO_INITDB_ROOT_PASSWORD}
ME_CONFIG_BASICAUTH_USERNAME=${ADMIN_USER}
ME_CONFIG_BASICAUTH_PASSWORD=${ADMIN_PASSWORD}

# --- Metabase ---
MB_DB_TYPE=postgres
MB_DB_DBNAME=metabase
MB_DB_PORT=${POSTGRES_PORT}
MB_DB_USER=${POSTGRES_USER}
MB_DB_PASS=${POSTGRES_PASSWORD}
MB_DB_HOST=${POSTGRES_HOST}

# --- NocoDB - Centralized Configuration ---
NC_DB_HOST=${POSTGRES_HOST}
NC_DB_PORT=${POSTGRES_PORT}
NC_DB_USER=${POSTGRES_USER}
NC_DB_PASSWORD=${POSTGRES_PASSWORD}
NC_DB_NAME=nocodb
NC_ADMIN_EMAIL=${ADMIN_EMAIL}
NC_ADMIN_PASSWORD=${ADMIN_PASSWORD_2}
NC_PUBLIC_URL=https://${NOCODB_DOMAIN}
NC_REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}
NC_SMTP_FROM=${ADMIN_EMAIL}
NC_SMTP_HOST=mailpit
NC_SMTP_PORT=1025

# --- pgAdmin ---
PGADMIN_DEFAULT_EMAIL=${ADMIN_EMAIL}
PGADMIN_DEFAULT_PASSWORD=${ADMIN_PASSWORD}

# --- Redis Commander ---
REDIS_COMMANDER_USER=${ADMIN_USER}
REDIS_COMMANDER_PASSWORD=${ADMIN_PASSWORD}

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# --- Grafana ---
GF_SECURITY_ADMIN_USER=${ADMIN_USER}
GF_SECURITY_ADMIN_PASSWORD=${ADMIN_PASSWORD}

# --- Matomo ---
MATOMO_DATABASE_HOST=${MARIADB_HOST}
MATOMO_DATABASE_ADAPTER=MYSQL
MATOMO_DATABASE_TABLES_PREFIX=matomo_
MATOMO_DATABASE_USERNAME=${MARIADB_USER}
MATOMO_DATABASE_PASSWORD=${MARIADB_PASSWORD}
MATOMO_DATABASE_DBNAME=matomo

# =============================================================================
# PROXY & NETWORKING
# =============================================================================

# --- Nginx Proxy Manager ---
NPM_DB_MYSQL_HOST=${MARIADB_HOST}
NPM_DB_MYSQL_PORT=${MARIADB_PORT}
NPM_DB_MYSQL_USER=${MARIADB_USER}
NPM_DB_MYSQL_PASSWORD=${MARIADB_PASSWORD}
NPM_DB_MYSQL_NAME=npm

# =============================================================================
# BACKEND SERVICES
# =============================================================================

# --- PHP ---
PHP_MEMORY_LIMIT=512M

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
GITHUB_TOKEN=your_github_token_here
GITHUB_USER=prospect-ogujiuba